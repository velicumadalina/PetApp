
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css
{
    <link rel="stylesheet" href="~/css/register.css" />

}

<form action="/register-user" method="post">
    <div class="container" style="width: 700px;">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <h3>I'm the owner of a shelter</h3>
        <p style=" margin-left:25px;font-size: 2em;">
            <input type="checkbox" name ="isShelter" value="true" id="isShelter" class="toggle" />
            <label for="isShelter"></label>
        </p>
        <label for="username"><b>Username:</b></label>
        <input type="text" placeholder="Enter username" name="username" id="username" required>
        <label for="first"><b>First Name:</b></label>
        <input type="text" placeholder="Enter First Name" name="first" id="first" required>
        <label for="last"><b>Last Name:</b></label>
        <input type="text" placeholder="Enter Last Name" name="last" id="last" required>
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" id="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" id="psw" required>


        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <button type="submit" class="registerbtn">Register</button>
    </div>

    <div class="container signin">
        <p>Already have an account? <a href="/login">Sign in</a>.</p>
    </div>
</form>